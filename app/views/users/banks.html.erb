<div class='container'>
<h1 class='margin-for-nav'>Bancos de alimento</h1>

  <div class='row'>
    <div class='col-md-6'>
      <ul class='elements'>
      <% @banks.each do |bank| %>
        <li><%= bank.name %></li>
      <% end %>
      </ul>
    </div>
    <div class='col-md-6'>
      <div class='map-box'>
      <div class='overlay-map'></div>
        <iframe src="https://www.google.com/maps/d/embed?mid=zld0wgpwkq24.ksQeFZlO5feA&hl=en_US">
        </iframe>
      </div>
    </div>
  </div>

<hr class='separator minor'></hr>
  <div class="load-more-container">

    <%= image_tag "ajax-loader.gif", style: "display:none;", class: "loading-gif" %>
    <%= link_to "Load More", donations_path, class: "btn-do load-more margin-helper" %>
  </div>
</div>