<h2 class='center'>Donaciones recientes</h2>
<div class='row'>
  <% @donations.each do |donation| %>
      <div class='col-md-4 col-sm-4 col-xs-12'>
        <div class='donor-box'>
          <% if donation.description.present? %>
          <div class='row'>
            <div class='col-md-9 col-sm-9 col-xs-9'>
              <h6>Donante</h6>
              <h3><%= "#{donation.user.name}" %></h3>
              <h5>Estado<span>Disponible</span></h5>
            </div>
            <div class='col-md-3 col-sm-3 col-xs-3'>
              <div class='donor-logo-container'></div>
            </div>
          </div>
            <div class='bottom'>
              <a href='/donations' class='btn-do'>Ver canasta</a>
            </div>
          <% end %>
        </div>
      </div>
  <% end %>
</div>
<hr class='separator'></hr>
<a href='/donations' class='btn-do margin-helper'>Ver todas</a>