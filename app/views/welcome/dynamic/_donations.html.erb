<h2 class='center'>Donaciones recientes</h2>
<div class='row'>
  <% @donations.each do |donation| %>
      <div class='col-md-4 col-sm-4 col-xs-12'>
        <div class='donor-box'>
          <% if donation.description.present? %>
            <h6>Donante</h6>
            <h3><%= "#{donation.user.name}" %></h3>
            <h5>Estado<span>Disponible</span></h5>
            <div class='bottom'>
              <a href='/donations' class='btn-do'>Ver canasta</a>
            </div>
          <% end %>
        </div>
      </div>
  <% end %>
</div>
<hr class='separator'></hr>
<a href='/donations' class='btn-do margin-helper'>Ver todas</a>